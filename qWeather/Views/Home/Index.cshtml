            };

            chart.draw(data, options);
        }

        function getTodayString(date) {

            var currentDate = date.getFullYear().toString() + "-" + (date.getMonth() + 1).toString() + "-" + date.getDate().toString();
            return "?start=" + currentDate + "T00:00:00&end=" + currentDate + "T23:59:59";
        }

        function getToday() {
            sendAjaxRequest("GET", function (data) {
                model.weather.removeAll();
                for (var i = 0; i < data.length; i++) {
                    model.weather.push(data[i]);
                }
            }, getTodayString(new Date()));
        }

        function getLast() {
            sendAjaxRequest("GET", function (data) {
                model.outside(data.VAL1);
                model.inside(data.VAL2);
                model.humidity(data.HUMIDITY);
            }, "last");
        }

        function sendAjaxRequest(httpMethod, callback, url, reqData) {
            $.ajax("/api" + (url ? "/" + url : ""), {
                type: httpMethod,
                success: callback,
                data: JSON.stringify(reqData),
                accepts: "application/json",
                contentType: "application/json"

            });
        }

        $(document).ready(function () {
           
            getLast();
            getToday();
            ko.applyBindings(model);

            google.setOnLoadCallback(drawChart);
           
        });
        
    </script>
}