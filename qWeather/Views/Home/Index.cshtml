@model List<qWeather.Models.Weather>

@{
    ViewBag.Title = "Home Page";
}

@section Scripts {
    <script>

        var model = {
            weather: ko.observableArray(),
            outside: ko.observable(),
            inside: ko.observable(),
            humidity: ko.observable()
        };


        function getTodayString(date) {

            var currentDate = date.getFullYear().toString() + "-" + (date.getMonth() + 1).toString() + "-" + date.getDate().toString();
            return "?start=" + currentDate + "T00:00:00&end=" + currentDate + "T23:59:59";
        }

        function getToday() {
            sendAjaxRequest("GET", function (data) {
                model.weather.removeAll();
                for (var i = 0; i < data.length; i++) {
                    model.weather.push(data[i]);
                }
            }, getTodayString(new Date()));
        }

        function getLast() {
            sendAjaxRequest("GET", function (data) {
                model.outside(data.VAL1);
                model.inside(data.VAL2);
                model.humidity(data.HUMIDITY);
                debugger;
            }, "now");
        }

        function sendAjaxRequest(httpMethod, callback, url, reqData) {
            $.ajax("/api" + (url ? "/" + url : ""), {
                type: httpMethod,
                success: callback,
                data: JSON.stringify(reqData),
                accepts: "application/json",
                contentType: "application/json"

            });
        }

        $(document).ready(function () {
            getLast();
            getToday();
            ko.applyBindings(model);
        });

    </script>
}

<div class="panel-heading">NOW</div>
<div class="panel-body" >
    INSIDE<p data-bind="text: inside"></p>
    OUTSIDE<p data-bind="text: outside"></p>
    HUMIDITY
    <p data-bind="text: humidity"></p>
</div>


<div class="panel-heading">TODAY</div>
<div class="panel-body">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    DateTimeFormatted
                </th>
                <th>
                    TOUT
                </th>
                <th>
                    TIN
                </th>
                <th>
                    HUMIDITY
                </th>
            </tr>
        </thead>
        <tbody data-bind="foreach: model.weather">
            <tr>
                <td data-bind="text: Id"></td>
                <td data-bind="text: DateTimeFormatted"></td>
                <td data-bind="text: VAL1"></td>
                <td data-bind="text: VAL2"></td>
                <td data-bind="text: HUMIDITY"></td>
            </tr>
        </tbody>
    </table>
</div>
