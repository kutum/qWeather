@model List<qWeather.Models.Weather>

@{
    ViewBag.Title = "Home Page";
}


<div class="panel-body">
    INSIDE<p data-bind="text: inside"></p>
    OUTSIDE<p data-bind="text: outside"></p>
    HUMIDITY<p data-bind="text: humidity"></p>
</div>

<div id="chart_div"></div>


@section Scripts {
    <script>

        var model = {
            weather: ko.observableArray(),
            outside: ko.observable(),
            inside: ko.observable(),
            humidity: ko.observable()
        };
        google.charts.load('current', { packages: ['annotationchart'] });

        function drawChart() {

            var chart = new google.visualization.LineChart(document.getElementById('chart_div'));

            var dataSet = model.weather();

            var data = new google.visualization.DataTable();
            data.addColumn('number', 'Minute');
            data.addColumn('number', 'Outside T');
            
            var dataArray = [];

